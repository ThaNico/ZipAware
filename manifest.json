{
  "manifest_version": 3,
  "name": "ZipAware",
  "version": "1.0.0",
  "description": "Warn users when accessing .zip URLs that can cause unexpected behavior.",
  "icons": {
    "16": "icons/zipicon16.png",
    "48": "icons/zipicon48.png",
    "128": "icons/zipicon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["webNavigation", "declarativeNetRequest", "notifications"],
  "host_permissions": ["*://*.zip/"],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "zipBlockRule",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
